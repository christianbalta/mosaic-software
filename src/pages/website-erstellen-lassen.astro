---

<Layout title={pageTitle} description={pageDescription}>
  <Navigation/>

  <main class="mx-auto w-full max-w-screen-2xl p-3 sm:p-6 lg:p-10 space-y-24 !pt-20">
    <Hero
        h1={heroTitle}
        description={heroDescription}
        iconTexts={heroIcons}
        heroImage={heroImg}
    />
    <Services
        items={serviceItems}
        title={serviceTitle}
        description={serviceDesc}
        playbackId={playbackId}
        videoTitle={serviceVideoTitle}
    />
    <Testimonials/>
    <Projects
        title="Aktuelle Arbeiten"
        projects={selectedProjects}
    />

    <Considerations
        badgeLabel={considerationsBadge}
        titleHtml={considerationsTitle}
        description={considerationsDescription}
        items={considerationsItems}
    />

    <FAQ
        title="Häufig gestellte Fragen"
        items={specificFaq}
    />

  </main>

  <Contact/>
  <Footer/>
</Layout>