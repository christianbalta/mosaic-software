// --- Considerations Data ---
const considerationsBadge = 'App-Entwicklung';
const considerationsTitle = 'Worauf es ankommt, wenn du eine App <br/><span class="text-desert-rock italic">entwickeln lässt</span>.';
const considerationsDescription = 'Eine gute App entsteht nicht zufällig. Hier ist, worauf wir bei der Entwicklung achten.';
const considerationsItems: ConsiderationItem[] = [
  {
    title: 'Anforderungen verstehen',
    descriptionHtml:
        'Bevor wir Code schreiben, hören wir zu. <strong>Wir analysieren deine Prozesse und Ziele</strong>, um eine App zu entwickeln, die wirklich Mehrwert schafft.',
    dotBgClass: 'bg-desert-rock',
    lineGradientFromClass: 'from-desert-rock',
    showConnector: true,
  },
  {
    title: 'Skalierbare Architektur',
    descriptionHtml:
        'Deine App soll wachsen können. <strong>Wir setzen auf moderne Technologien und sauberen Code</strong>, damit Erweiterungen jederzeit möglich sind.',
    dotBgClass: 'bg-black-olive',
    lineGradientFromClass: 'from-black-olive',
    showConnector: true,
