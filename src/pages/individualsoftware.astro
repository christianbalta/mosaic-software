    serviceItems: ServiceItem[] = [
      {
        icon: 'fa-solid fa-globe',
        title: 'Web-Applikationen',
        description: 'Moderne Webanwendungen für optimale Performance.',
      },
      {
        icon: 'fa-solid fa-mobile-screen-button',
        title: 'Mobile Apps',
