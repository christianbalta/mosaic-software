<Layout
    title="Individualsoftware Zürich | Mosaic Software"
    description="Wir entwickeln performante Individualsoftware und moderne Web‑, Mobile‑ und Desktop‑Lösungen. Zuverlässig, sicher und skalierbar."
>
  <Navigation/>

  <main class="mx-auto w-full max-w-screen-2xl p-3 sm:p-6 lg:p-10 space-y-24 !pt-20">
    <Hero
        h1={heroTitle}
        description={heroDescription}
        iconTexts={heroIconsWithText}
        heroImage={heroImg}
    />
    <Services items={serviceItems} title={serviceTitle} description={serviceDescription}
              playbackId={playbackId} videoTitle={videoTitle}/>
    <Testimonials/>
    <Projects title="Aktuelle Arbeiten" projects={projects}/>

    <FAQ
        title="FAQ: Individualsoftware"
        items={faqItems}
    />
  </main>

  <Contact/>
  <Footer/>
</Layout>
