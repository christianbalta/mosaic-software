    <div class="bg-porcelain-mist text-dark-brown rounded-3xl overflow-hidden border border-creamed-oat">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-stretch">
        <!-- Left Column - Title + Text -->
        <div class="space-y-8 p-8 md:p-12 lg:p-16">
          <h2 class="text-desert-rock text-3xl md:text-3xl lg:text-6xl xl:text-5xl font-bold leading-tight">
