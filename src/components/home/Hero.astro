<style>
  /* Base */
  .hero {
    padding: 100px 40px;
    min-height: 1000px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    max-width: 800px;
    text-align: center;
    z-index: 2;
    animation: fadeInUp 1s ease-out;
  }

  .hero-subtitle {
    font-size: 20px;
    line-height: 1.6em;
    color: rgba(0, 0, 0, 0.6);
    max-width: 600px;
  }

  /* Buttons */
  .btn-primary {
    background-color: #000;
    color: #fff;
    padding: 15px 30px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 500;
    font-size: 14px;
    border: 1px solid rgba(19, 21, 23, 0.1);
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .btn-primary:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .btn-large {
    padding: 15px 60px;
    font-size: 16px;
  }

  /* 3D Carousel */
  .carousel-container {
    position: absolute;
    top: 270px;
    left: 50%;
    transform: translateX(-50%);
    width: 1600px;
    height: 600px;
    z-index: 1;
    overflow: hidden;
    mask: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 1) 19.72%,
      rgba(0, 0, 0, 1) 80%,
      rgba(0, 0, 0, 0) 100%
    );
    -webkit-mask: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 1) 19.72%,
      rgba(0, 0, 0, 1) 80%,
      rgba(0, 0, 0, 0) 100%
    );
  }

  .carousel-slider {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    opacity: 1;
    transform: perspective(600px);
    transform-style: preserve-3d;
  }

  .carousel-circle {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    transform-style: preserve-3d;
  }

  .carousel-images {
    position: relative;
    width: 1400px;
    height: 400px;
    transform-style: preserve-3d;
    animation: rotateCarousel 60s linear infinite;
  }

  .image-pair {
    position: absolute;
    width: 1400px;
    height: 400px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transform-style: preserve-3d;
  }

  .image-pair:nth-child(1) {
    transform: rotateY(0deg);
  }

  .image-pair:nth-child(2) {
    transform: rotateY(30deg);
  }

  .image-pair:nth-child(3) {
    transform: rotateY(60deg);
  }

  .image-pair:nth-child(4) {
    transform: rotateY(90deg);
  }

  .image-pair:nth-child(5) {
    transform: rotateY(120deg);
  }

  .image-pair:nth-child(6) {
    transform: rotateY(150deg);
  }

  .carousel-image {
    width: 280px;
    height: 400px;
    border-radius: 20px;
    overflow: hidden;
    backface-visibility: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    will-change: transform;
  }

  .carousel-image:first-child {
    transform: rotateY(90deg);
  }

  .carousel-image:last-child {
    transform: rotateY(-90deg);
  }

  .carousel-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Placeholder styles */
  .image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: bold;
    color: #fff;
  }

  @keyframes rotateCarousel {
    from {
      transform: rotateY(0deg);
    }
    to {
      transform: rotateY(-360deg);
    }
  }

  /* Feature Cards */
  .feature-cards {
    display: flex;
    gap: 20px;
    width: 100%;
    max-width: 1200px;
    margin-top: 60px;
    z-index: 2;
  }

  .feature-card {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    padding: 30px;
    text-align: center;
  }

  .feature-card.bordered {
    border-left: 1px solid rgba(0, 0, 0, 0.1);
    border-right: 1px solid rgba(0, 0, 0, 0.1);
  }

  .feature-title {
    font-size: 20px;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: rgb(30, 32, 36);
  }

  .feature-description {
    font-size: 12px;
    line-height: 1.6em;
    color: rgba(0, 0, 0, 0.6);
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 1199px) {
    .hero-title {
      font-size: 48px;
    }

    .carousel-container {
      width: 100vw;
    }

    .carousel-images {
      width: 1000px;
    }

    .image-pair {
      width: 1000px;
    }

    .carousel-image {
      width: 240px;
      height: 340px;
    }
  }

  @media (max-width: 809px) {
    .hero {
      padding: 40px 24px;
      min-height: auto;
    }

    .hero-title {
      font-size: 36px;
    }

    .hero-subtitle {
      font-size: 16px;
    }

    .carousel-container {
      height: 400px;
      top: 340px;
    }

    .carousel-images {
      width: 1400px;
      height: 400px;
    }

    .image-pair {
      width: 1400px;
      height: 400px;
    }

    .carousel-image {
      width: 280px;
      height: 400px;
    }

    .feature-cards {
      flex-direction: column;
      margin-top: 280px; /* Push below absolute carousel on mobile */
    }

    .feature-card.bordered {
      border: none;
      border-top: 1px solid rgba(0, 0, 0, 0.1);
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }
  }
</style>
