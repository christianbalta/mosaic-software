---

<section id="kontakt" class="relative py-16 lg:py-24 overflow-hidden">
  <!-- Background Noise/Texture -->
  <div class="absolute inset-0 bg-porcelain-mist -z-20"></div>
  <div
      class="absolute inset-0 opacity-[0.03] bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] -z-10 pointer-events-none"></div>

  <div class="relative mx-auto w-full max-w-screen-2xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-start">

      <div class="lg:col-span-5 space-y-10 lg:sticky lg:top-32">

        <!-- Header -->
        <div class="space-y-6">
          <div
              class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-black-olive/10 border border-black-olive/20 text-black-olive text-xs font-bold uppercase tracking-wider">
            <span class="relative flex h-2 w-2">
              <span
                  class="animate-ping absolute inline-flex h-full w-full rounded-full bg-black-olive opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-black-olive"></span>
            </span>
            Verfügbar für neue Projekte
          </div>

          <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-dark-brown leading-[1.1]">
            Lass uns etwas <br/><span class="text-desert-rock">Grossartiges</span> bauen.
          </h2>
          <p class="text-lg text-dark-brown/80 leading-relaxed max-w-md">
            Erzähl uns von deiner Vision. Ob Website Relaunch, Webshop oder komplexe Applikation –
            wir hören zu.
          </p>
        </div>

        <!-- Contact Cards -->
        <div class="grid gap-4">
          <a href="mailto:contact@mosaic-software.ch"
             class="group flex items-center p-5 bg-white border border-soft-sandstone/40 rounded-2xl hover:border-desert-rock hover:shadow-lg transition-all duration-300">
            <div
                class="w-12 h-12 rounded-xl bg-porcelain-mist flex items-center justify-center text-dark-brown group-hover:bg-desert-rock group-hover:text-feather-white transition-colors">
              <i class="fas fa-envelope text-xl"></i>
            </div>
            <div class="ml-5">
              <span class="block text-xs font-bold uppercase tracking-wider text-desert-rock">Email schreiben</span>
              <span class="text-lg font-medium text-dark-brown">contact@mosaic-software.ch</span>
            </div>
            <i class="fas fa-arrow-right ml-auto text-dark-brown/30 group-hover:text-desert-rock group-hover:translate-x-1 transition-all"></i>
          </a>

          <a href="tel:+41767439974"
             class="group flex items-center p-5 bg-white border border-soft-sandstone/40 rounded-2xl hover:border-desert-rock hover:shadow-lg transition-all duration-300">
            <div
                class="w-12 h-12 rounded-xl bg-porcelain-mist flex items-center justify-center text-dark-brown group-hover:bg-desert-rock group-hover:text-feather-white transition-colors">
              <i class="fas fa-phone text-xl"></i>
            </div>
            <div class="ml-5">
              <span class="block text-xs font-bold uppercase tracking-wider text-desert-rock">Anrufen</span>
              <span class="text-lg font-medium text-dark-brown">+41 76 473 99 74</span>
            </div>
            <i class="fas fa-arrow-right ml-auto text-dark-brown/30 group-hover:text-desert-rock group-hover:translate-x-1 transition-all"></i>
          </a>
        </div>
      </div>

      <!-- Form -->
      <div class="lg:col-span-7">
        <div
            class="bg-white rounded-[2.5rem] shadow-xl shadow-soft-sandstone/20 p-8 sm:p-12 border border-soft-sandstone/20 relative overflow-hidden">
          <form id="contact-form" class="space-y-8 relative z-10">

            <!-- Personal Details -->
            <div class="space-y-6">
              <h3 class="text-xl font-bold text-dark-brown flex items-center gap-2 mb-0">
                <span
                    class="w-6 h-6 rounded-full bg-desert-rock text-white text-xs flex items-center justify-center">1</span>
                Deine Daten
              </h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="form-group relative !mt-5">
                  <input type="text" id="firstName" name="firstName" required placeholder=" "
                         class="peer w-full px-4 py-3 bg-porcelain-mist/50 border border-transparent rounded-xl focus:outline-none focus:ring-2 focus:ring-desert-rock focus:bg-white transition-all placeholder-transparent"/>
                  <label for="firstName"
                         class="absolute left-4 top-3.5 text-dark-brown/50 text-sm transition-all peer-placeholder-shown:text-base peer-placeholder-shown:top-3.5 peer-focus:-top-6 peer-focus:text-xs peer-focus:text-desert-rock pointer-events-none">Vorname*</label>
                </div>
                <div class="form-group relative !mt-0 md:!mt-5">
                  <input type="text" id="lastName" name="lastName" required placeholder=" "
                         class="peer w-full px-4 py-3 bg-porcelain-mist/50 border border-transparent rounded-xl focus:outline-none focus:ring-2 focus:ring-desert-rock focus:bg-white transition-all placeholder-transparent"/>
                  <label for="lastName"
                         class="absolute left-4 top-3.5 text-dark-brown/50 text-sm transition-all peer-placeholder-shown:text-base peer-placeholder-shown:top-3.5 peer-focus:-top-6 peer-focus:text-xs peer-focus:text-desert-rock pointer-events-none">Nachname*</label>
                </div>
              </div>
              <div class="form-group relative">
                <input type="email" id="email" name="email" required placeholder=" "
                       class="peer w-full px-4 py-3 bg-porcelain-mist/50 border border-transparent rounded-xl focus:outline-none focus:ring-2 focus:ring-desert-rock focus:bg-white transition-all placeholder-transparent"/>
                <label for="email"
                       class="absolute left-4 top-3.5 text-dark-brown/50 text-sm transition-all peer-placeholder-shown:text-base peer-placeholder-shown:top-3.5 peer-focus:-top-6 peer-focus:text-xs peer-focus:text-desert-rock pointer-events-none">E-Mail
                  Adresse*</label>
              </div>
            </div>

            <!-- Interactive Timeline Selector -->
            <div class="space-y-4">
              <h3 class="text-xl font-bold text-dark-brown flex items-center gap-2">
                <span
                    class="w-6 h-6 rounded-full bg-desert-rock text-white text-xs flex items-center justify-center">2</span>
                Zeitrahmen
              </h3>
              <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
                {[
                  {val: 'asap', label: 'Sofort'},
                  {val: '1-3m', label: '1-3 Monate'},
                  {val: '3-6m', label: '3-6 Monate'},
                  {val: 'later', label: '> 6 Monate'}
                ].map((opt) => (
                    <label class="cursor-pointer">
                      <input type="radio" name="timeline" value={opt.val} class="peer sr-only"
                             required/>
                      <div
                          class="h-full py-3 px-2 text-center rounded-xl border border-soft-sandstone/30 bg-white text-sm font-medium text-dark-brown/70 transition-all peer-checked:border-desert-rock peer-checked:bg-desert-rock/10 peer-checked:text-dark-brown hover:border-desert-rock/50">
                        {opt.label}
                      </div>
                    </label>
                ))}
              </div>
            </div>

            <!-- Message -->
            <div class="space-y-4">
              <h3 class="text-xl font-bold text-dark-brown flex items-center gap-2">
                <span
                    class="w-6 h-6 rounded-full bg-desert-rock text-white text-xs flex items-center justify-center">3</span>
                Details
              </h3>
              <div class="form-group">
                <label for="message"></label>
                <textarea id="message" name="message" required rows="4"
                          placeholder="Erzähle uns kurz von deinem Projekt..."
                          class="w-full px-4 py-3 bg-porcelain-mist/50 border border-transparent rounded-xl focus:outline-none focus:ring-2 focus:ring-desert-rock focus:bg-white transition-all resize-none"></textarea>
              </div>
            </div>

            <!-- Privacy & Submit -->
            <div class="pt-4 border-t border-soft-sandstone/20">
              <div class="flex items-start mb-6">
                <input type="checkbox" id="privacy" name="privacy" required
                       class="w-4 h-4 text-desert-rock rounded focus:ring-desert-rock border-gray-300"/>
                <label for="privacy" class="ml-3 text-sm text-dark-brown/70">
                  Ich stimme der <a href="/data-protection"
                                    class="text-desert-rock hover:underline font-medium">Datenschutzerklärung</a>
                  zu.
                </label>
              </div>

              <button type="submit"
                      class="w-full py-4 px-6 bg-desert-rock text-white rounded-xl font-bold text-lg hover:bg-dark-brown hover:shadow-lg hover:-translate-y-1 transition-all duration-300 flex items-center justify-center gap-3 group">
                <span>Anfrage absenden</span>
                <i class="fas fa-paper-plane transform group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform"></i>
              </button>
            </div>

            <!-- Success Message Overlay -->
            <div id="success-message"
                 class="absolute inset-0 bg-white/95 backdrop-blur-sm flex items-center justify-center opacity-0 pointer-events-none transition-opacity duration-500 z-20 rounded-[2.5rem]">
              <div class="text-center p-8 transform scale-90 transition-transform duration-500"
                   id="success-content">
                <div
                    class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6 text-green-600 text-3xl">
                  <i class="fas fa-check"></i>
                </div>
                <h3 class="text-3xl font-bold text-dark-brown mb-2">Nachricht gesendet!</h3>
                <p class="text-dark-brown/70">Wir melden uns in Kürze bei dir.</p>
              </div>
            </div>

          </form>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  input[type="radio"]:checked + div {
    box-shadow: 0 0 0 1px var(--color-desert-rock);
  }

  .form-group {
    position: relative;
    margin-top: 1.5rem;
  }

  input:placeholder-shown + label {
    top: 50%;
    transform: translateY(-50%);
  }

  input:not(:placeholder-shown) + label,
  input:focus + label {
    top: -0.75rem;
    font-size: 0.75rem;
    color: var(--color-desert-rock);
    background: white;
    padding: 0 4px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contact-form") as HTMLFormElement;
    const successMsg = document.getElementById("success-message");
    const successContent = document.getElementById("success-content");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;

      // 1. Loading State
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Sende...';
    });
  });
</script>