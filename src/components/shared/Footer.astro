---
import mosaicLogo from "../../assets/Mosaic-Software-logo.svg";
import { Image } from "astro:assets";
---

<footer class="bg-dark-brown text-feather-white relative overflow-hidden">
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-6 pb-4 lg:pb-6 lg:pt-16"
  >
    <!-- Main footer content -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
      <!-- Company Info -->
      <div>
        <div class="mb-6">
          <Image
            src={mosaicLogo}
            alt="Mosaic Software Logo"
            width={120}
            class="mb-4 brightness-0 invert"
          />
          <p class="text-soft-sandstone text-sm leading-relaxed max-w-md">
            Deine vertrauensvolle Softwareagentur in Zürich. Wir entwickeln
            individuelle Software und Websites für moderne Unternehmen.
          </p>
        </div>

        <!-- Contact Info -->
        <div class="space-y-3">
          <div class="flex items-center space-x-3">
            <i class="fas fa-map-marker-alt text-desert-rock w-4"></i>
            <span class="text-sm text-soft-sandstone"
              >Brunnenstrasse 7<br />8610 Uster</span
            >
          </div>
          <div class="flex items-center space-x-3">
            <i class="fas fa-envelope text-desert-rock w-4"></i>
            <a
              href="mailto:contact@mosaic-software.ch"
              class="text-sm text-soft-sandstone hover:text-feather-white transition-colors duration-200"
            >
              contact@mosaic-software.ch
            </a>
          </div>
          <div class="flex items-center space-x-3">
            <i class="fas fa-phone text-desert-rock w-4"></i>
            <a
              href="tel:+41764739974"
              class="text-sm text-soft-sandstone hover:text-feather-white transition-colors duration-200"
            >
              +41 76 473 99 74
            </a>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-6 text-feather-white">
          Dienstleistungen
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href="/software"
              class="text-soft-sandstone hover:text-feather-white transition-colors duration-200 text-sm"
            >
              Softwarelösungen
            </a>
          </li>

          <li>
            <a
              href="/website"
              class="text-soft-sandstone hover:text-feather-white transition-colors duration-200 text-sm"
            >
              Websites & Shops
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-desert-rock/30 pt-8">
      <div
        class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-4 lg:space-y-0"
      >
        <!-- Copyright -->
        <div class="text-sm text-soft-sandstone">
          © {new Date().getFullYear()} Mosaic Software. Alle Rechte vorbehalten.
        </div>

        <!-- Legal Links -->
        <div class="flex flex-wrap items-center space-x-6">
          <a
            href="/data-protection"
            class="text-sm text-soft-sandstone hover:text-feather-white transition-colors duration-200"
          >
            Datenschutz
          </a>
          <a
            href="/impressum"
            class="text-sm text-soft-sandstone hover:text-feather-white transition-colors duration-200"
          >
            Impressum
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll to top button -->
  <button
    id="scroll-to-top"
    class="fixed bottom-8 right-8 w-12 h-12 bg-desert-rock hover:bg-dark-brown text-feather-white rounded-full shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-300 opacity-0 pointer-events-none z-50"
    aria-label="Nach oben scrollen"
  >
    <i class="fas fa-chevron-up"></i>
  </button>
</footer>

<style>
  .group:hover .group-hover\:text-feather-white {
    color: var(--color-feather-white);
  }

  .group:hover .group-hover\:scale-110 {
    transform: scale(1.1);
  }

  .transition-all {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .transition-colors {
    transition: color 0.2s ease-in-out;
  }

  button:focus {
    box-shadow: 0 0 0 3px rgba(164, 141, 120, 0.2);
    outline: none;
  }

  a:not(.group):focus {
    outline: 2px solid var(--color-desert-rock);
    outline-offset: 2px;
    border-radius: 2px;
  }

  #scroll-to-top.show {
    opacity: 1;
    pointer-events: all;
  }

  .backdrop-blur-sm {
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const scrollToTopBtn = document.getElementById("scroll-to-top");

    if (scrollToTopBtn) {
      window.addEventListener("scroll", () => {
        if (window.scrollY > 300) {
          scrollToTopBtn.classList.add("show");
        } else {
          scrollToTopBtn.classList.remove("show");
        }

        const nearBottom =
          window.scrollY >=
          document.documentElement.scrollHeight - window.innerHeight - 55;

        if (nearBottom) {
          scrollToTopBtn.classList.remove("bottom-8");
          scrollToTopBtn.classList.add("bottom-28");
          scrollToTopBtn.classList.add("lg:bottom-24");
        } else {
          scrollToTopBtn.classList.remove("bottom-28");
          scrollToTopBtn.classList.remove("lg:bottom-24");
          scrollToTopBtn.classList.add("bottom-8");
        }
      });

      scrollToTopBtn.addEventListener("click", () => {
        window.scrollTo({
          top: 0,
          behavior: "smooth",
        });
      });
    }
  });
</script>
