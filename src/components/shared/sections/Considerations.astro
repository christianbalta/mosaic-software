---
import type { ConsiderationItem } from "../../../types/considerationItem";

export interface Props {
  badgeLabel: string;
  titleHtml: string; // can contain <br/> and inline spans
  description: string;
  items: ConsiderationItem[];
}

const { badgeLabel, titleHtml, description, items } = Astro.props as Props;
---
<section class="my-24">
  <div class="grid lg:grid-cols-12 gap-12 lg:gap-24">
    <!-- Sticky Header Side -->
    <div class="lg:col-span-5 relative">
      <div class="sticky top-32 space-y-6">
        <span class="inline-block px-3 py-1 bg-desert-rock/10 text-desert-rock text-xs font-bold uppercase tracking-widest rounded-full">
          {badgeLabel}
        </span>
        <h2 class="text-4xl lg:text-5xl font-medium text-dark-brown leading-tight" set:html={titleHtml} />
        <p class="text-lg text-dark-brown/70">{description}</p>
      </div>
    </div>

    <!-- Scrolling Content Side -->
    <div class="lg:col-span-7 space-y-12">
      {items?.map((item) => (
        <div class="flex gap-6 items-start">
          <div class="hidden sm:flex flex-col items-center mt-2">
            <div class={`w-3 h-3 rounded-full ${item.dotBgClass}`}></div>
            {item.showConnector && (
              <div class={`w-px h-32 bg-gradient-to-b ${item.lineGradientFromClass ?? ''} to-transparent mt-2`}></div>
            )}
          </div>
          <div class="space-y-3">
            <h3 class="text-2xl text-dark-brown font-semibold">{item.title}</h3>
            <p class="text-dark-brown/80 leading-relaxed" set:html={item.descriptionHtml} />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
