{
  "designSystem": {
    "brand": {
      "name": "Mosaic Software",
      "primaryColor": "#f0cea6",
      "backgroundColor": "#ffffff",
      "textColors": {
        "primary": "#2d3436",
        "secondary": "#636e72",
        "muted": "#95a5a6",
        "accent": "#d4a574"
      }
    },
    "typography": {
      "fontFamilies": {
        "display": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "body": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "mono": "'JetBrains Mono', 'Courier New', monospace"
      },
      "patterns": {
        "backgroundTexture": {
          "type": "wavy-lines",
          "description": "Subtle flowing lines pattern using CSS gradients or SVG",
          "opacity": 0.05,
          "color": "#f0cea6"
        }
      }
    },
    "components": {
      "Navigation": {
        "structure": {
          "layout": "horizontal",
          "position": "fixed-top",
          "height": "80px",
          "backgroundColor": "rgba(255, 255, 255, 0.95)",
          "backdropFilter": "blur(10px)",
          "borderBottom": "1px solid rgba(240, 206, 166, 0.2)",
          "zIndex": 1000
        },
        "logo": {
          "position": "left",
          "fontSize": "1.5rem",
          "fontWeight": 700,
          "color": "#2d3436",
          "hoverEffect": "scale(1.05)"
        },
        "menuItems": {
          "display": "flex",
          "gap": "2rem",
          "position": "center",
          "fontSize": "1rem",
          "fontWeight": 500,
          "color": "#636e72",
          "hoverColor": "#f0cea6",
          "activeIndicator": {
            "type": "underline",
            "height": "2px",
            "color": "#f0cea6",
            "animation": "slide-in"
          }
        },
        "ctaButton": {
          "position": "right",
          "padding": "0.75rem 2rem",
          "backgroundColor": "#f0cea6",
          "color": "#2d3436",
          "borderRadius": "9999px",
          "fontWeight": 600,
          "hoverEffect": {
            "transform": "translateY(-2px)",
            "shadow": "0 10px 20px rgba(240, 206, 166, 0.3)"
          }
        },
        "responsive": {
          "mobile": {
            "type": "hamburger",
            "slideFrom": "right",
            "overlayColor": "rgba(0, 0, 0, 0.5)"
          }
        },
        "tailwindClasses": {
          "container": "fixed top-0 w-full bg-white/95 backdrop-blur-md border-b border-amber-200/20 z-50",
          "wrapper": "max-w-7xl mx-auto px-4 md:px-8 lg:px-12",
          "nav": "flex items-center justify-between h-20",
          "logo": "text-2xl font-bold text-gray-800 hover:scale-105 transition-transform",
          "menuDesktop": "hidden lg:flex items-center gap-8",
          "menuItem": "text-gray-600 hover:text-amber-500 font-medium transition-colors relative",
          "activeMenuItem": "text-amber-500 after:absolute after:bottom-0 after:left-0 after:w-full after:h-0.5 after:bg-amber-400",
          "ctaButton": "bg-amber-300 text-gray-800 px-8 py-3 rounded-full font-semibold hover:-translate-y-0.5 hover:shadow-lg hover:shadow-amber-200/50 transition-all",
          "languageSelector": "flex items-center gap-2 text-gray-600",
          "mobileMenuButton": "lg:hidden text-gray-600"
        }
      },
      "Hero": {
        "structure": {
          "layout": "two-column",
          "minHeight": "100vh",
          "paddingTop": "120px",
          "backgroundColor": "#ffffff",
          "backgroundPattern": {
            "enabled": true,
            "type": "flowing-lines",
            "position": "right",
            "opacity": 0.8
          }
        },
        "content": {
          "leftColumn": {
            "width": "50%",
            "alignment": "flex-start",
            "justifyContent": "center"
          },
          "rightColumn": {
            "width": "50%",
            "type": "decorative-pattern",
            "overflow": "visible"
          }
        },
        "typography": {
          "mainHeading": {
            "fontSize": {
              "mobile": "3rem",
              "tablet": "4rem",
              "desktop": "6rem"
            },
            "fontWeight": 800,
            "lineHeight": 0.95,
            "letterSpacing": "-0.02em",
            "color": "#f0cea6",
            "textTransform": "uppercase",
            "wordBreak": "normal"
          },
          "subHeading": {
            "fontSize": {
              "mobile": "1.25rem",
              "tablet": "1.5rem",
              "desktop": "1.75rem"
            },
            "fontWeight": 600,
            "color": "#2d3436",
            "marginBottom": "1rem"
          },
          "description": {
            "fontSize": "1.125rem",
            "fontWeight": 400,
            "lineHeight": 1.7,
            "color": "#636e72",
            "maxWidth": "600px"
          }
        },
        "decorativeElements": {
          "flowingLines": {
            "type": "svg-pattern",
            "strokeWidth": 1,
            "strokeColor": "rgba(240, 206, 166, 0.3)",
            "animation": "subtle-float",
            "duration": "20s"
          },
          "accentBadge": {
            "position": "bottom-right",
            "type": "circular",
            "content": "Partner Badge",
            "backgroundColor": "#f0cea6",
            "rotation": "slight-tilt"
          }
        },
        "socialProof": {
          "position": "bottom-left",
          "elements": {
            "rating": {
              "score": "4.95",
              "maxScore": 5,
              "reviewCount": "60+",
              "starColor": "#f0cea6"
            },
            "achievement": {
              "text": "Top 10 Software Agencies",
              "source": "Industry Recognition",
              "icon": "trophy"
            }
          }
        },
        "responsive": {
          "mobile": {
            "layout": "single-column",
            "textAlign": "center",
            "patternPosition": "background"
          },
          "tablet": {
            "layout": "stacked",
            "contentOrder": [
              "heading",
              "pattern",
              "description",
              "socialProof"
            ]
          }
        },
        "tailwindClasses": {
          "section": "relative min-h-screen flex items-center bg-white overflow-hidden pt-32",
          "container": "max-w-7xl mx-auto px-4 md:px-8 lg:px-12 w-full",
          "grid": "grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center",
          "contentWrapper": "flex flex-col space-y-8",
          "mainHeading": "text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-extrabold text-amber-400 uppercase leading-none tracking-tight",
          "subHeading": "text-xl md:text-2xl lg:text-3xl font-semibold text-gray-800",
          "description": "text-lg text-gray-600 leading-relaxed max-w-xl",
          "patternWrapper": "relative h-96 lg:h-full",
          "socialProofContainer": "flex flex-wrap gap-8 pt-8",
          "ratingBadge": "flex items-center gap-2 bg-amber-50 px-4 py-2 rounded-full",
          "achievementBadge": "flex items-center gap-2 text-gray-600"
        },
        "animations": {
          "fadeInUp": {
            "initial": "opacity-0 translate-y-10",
            "animate": "opacity-100 translate-y-0",
            "transition": "transition-all duration-700 ease-out"
          },
          "slideInRight": {
            "initial": "opacity-0 translate-x-20",
            "animate": "opacity-100 translate-x-0",
            "transition": "transition-all duration-900 ease-out delay-300"
          },
          "float": {
            "keyframes": "@keyframes float { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-20px); } }",
            "class": "animate-[float_6s_ease-in-out_infinite]"
          }
        }
      }
    },
    "implementation": {
      "astro": {
        "structure": "component-based",
        "styling": "tailwind-classes",
        "interactivity": "vanilla-js or alpine.js",
        "optimization": "view-transitions-api"
      },
      "tailwind": {
        "config": {
          "extend": {
            "colors": {
              "mosaic": {
                "50": "#fdf9f3",
                "100": "#faf3e6",
                "200": "#f5e6cc",
                "300": "#f0cea6",
                "400": "#e8b074",
                "500": "#df9042",
                "600": "#d4722a",
                "700": "#b25920",
                "800": "#8f471a",
                "900": "#743a16"
              }
            },
            "fontFamily": {
              "sans": [
                "Inter",
                "system-ui",
                "sans-serif"
              ],
              "display": [
                "Inter",
                "system-ui",
                "sans-serif"
              ]
            }
          }
        }
      }
    }
  }
}
